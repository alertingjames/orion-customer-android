<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_rect_shadow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="30dp">

            <ImageView
                android:id="@+id/pictureBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/header_background"
                android:scaleType="centerCrop"/>

        </FrameLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productNameBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="Traditional Qatari Dishes"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/storeNameBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/colorPrimary"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="Carrefour"/>

                    <TextView
                        android:id="@+id/deliveryBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="3dp"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:text="3 Days, 3.99 SGD"
                        android:drawableLeft="@drawable/ic_shipping"
                        android:drawablePadding="15dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/priceBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:singleLine="true"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:text="20 QR"/>

                        <FrameLayout
                            android:id="@+id/oldPriceFrame"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:visibility="visible">
                            <TextView
                                android:id="@+id/oldPriceBox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:layout_gravity="center_horizontal"
                                android:text="12.5 QR"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:textSize="11sp"
                                android:gravity="center"/>
                            <View
                                android:layout_width="80dp"
                                android:layout_height="1dp"
                                android:layout_gravity="center_vertical"
                                android:background="#3F3F3F"/>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/btn_cart"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/green_round_fill"
                                android:tint="@color/white"
                                android:padding="10dp"
                                android:src="@drawable/ic_add_cart"/>

                            <ImageView
                                android:id="@+id/btn_delete"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/green_round_fill"
                                android:tint="@color/white"
                                android:layout_marginLeft="30dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_cancel"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>

























